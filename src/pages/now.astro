---
import Container from "@/components/Container.astro";
import Layout from "@/layouts/Layout.astro";
import TimelineItem from "@/components/TimelineItem.astro";
import { Image } from "astro:assets";
---

<Layout title="Now" description="What I'm up to now.">
  <Container>
    <h1
      class="text-5xl mb-8 font-bold tracking-tight sm:text-6xl inline-block gradient-text"
    >
      My timeline
    </h1>
    <ol
      class="relative ml-3 space-y-12 border-l-[3px] border-zinc-800 hover:border-zinc-700 transition-colors duration-300 pb-24"
    >
      <TimelineItem title="What am i doing now?" icon="🚀" time="now">
        <p>Waiting for AI to replace me 🤖</p>
      </TimelineItem>
      <TimelineItem
        title="Start learning Master of Business Administration at UEH University of Economics Ho Chi Minh City"
        icon="🏫"
        time="2024-10-01"
      />
      <TimelineItem
        title="Third research paper published"
        icon="📄"
        time="2024"
      >
        <a
          href="https://arxiv.org/abs/2406.06239"
          class="text-yellow-500 hover:underline"
        >
          I-MPN: Inductive Message Passing Network for Efficient
          Human-in-the-Loop Annotation of Mobile Eye Tracking Data
        </a>
      </TimelineItem>
      <TimelineItem
        title="Second research paper published"
        icon="📄"
        time="2024"
      >
        <a
          href="https://doi.org/10.11591/ijai.v13.i4.pp3962-3973"
          class="text-yellow-500 hover:underline"
        >
          Enhancing legal research through knowledge-infused information
          retrieval for Vietnamese labor law
        </a>
      </TimelineItem>

      <TimelineItem
        title="Graduated from University of Science, Vietnam National University Ho Chi Minh City"
        icon="🎓"
        time="2023-11-25"
      />
      <TimelineItem
        title="Finished my graduation thesis at University of Science, Vietnam National University Ho Chi Minh City"
        icon="📝"
        time="2023-07-16"
      >
        <a href="/timeline/thesis.pdf" class="text-yellow-500 hover:underline">
          Deep learning in legal system: Opportunities and Challenges
        </a>
      </TimelineItem>
      <TimelineItem
        title="First research paper published"
        icon="📄"
        time="2023-07-18"
      >
        <a
          href="https://doi.org/10.1007/978-981-99-5834-4_8"
          class="text-yellow-500 hover:underline"
        >
          Intelligent Retrieval System on Legal Information
        </a>
      </TimelineItem>
      <TimelineItem
        title="Won first prize in WebDev Adventure 2022"
        icon="🥇"
        time="2022-05-13"
      >
        <a
          class="text-yellow-500 hover:underline"
          href="https://github.com/Th1nhNg0/travel_flow_hackathon"
        >
          Link to Project
        </a>
        <Image
          inferSize={true}
          width={800}
          height={450}
          src="/timeline/webdev2022.jpg"
          alt=""
          class="rounded-lg mt-2"
        />
      </TimelineItem>
      <TimelineItem
        title="Start working at KING ATTORNEY JOINT STOCK COMPANY"
        icon="🏢"
        time="2021-01-01"
      />
      <TimelineItem
        title="Start studying at University of Science, Vietnam National University Ho Chi Minh City"
        icon="🏫"
        time="2019-08-15"
      >
        <Image
          inferSize={true}
          width={800}
          height={450}
          src="/timeline/hcmus.jpg"
          alt=""
          class="rounded-lg mt-2"
        />
      </TimelineItem>
      <TimelineItem
        title="Graduated from Phan Ngoc Hien High School for the Gifted"
        icon="🎓"
        time="2019-05-21"
      />
      <TimelineItem
        title="Won the Consolation prize at the national competition for excellent students in high school"
        icon="🌿"
        time="2019-04-21"
      />
      <TimelineItem
        title="Won the First prize at the provincial competition for excellent students in high school"
        icon="🥇"
        time="2017-10-11"
      />
